<p id="notice"><%= notice %></p>

<h1>Listing Reserved Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Number of rooms</th>
      <th>Roomtype</th>
      <th>Reservation</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reserved_rooms.each do |reserved_room| %>
      <tr>
        <td><%= reserved_room.number_of_rooms %></td>
        <td><%= reserved_room.roomtype %></td>
        <td><%= reserved_room.reservation %></td>
        <td><%= reserved_room.status %></td>
        <td><%= link_to 'Show', reserved_room %></td>
        <td><%= link_to 'Edit', edit_reserved_room_path(reserved_room) %></td>
        <td><%= link_to 'Destroy', reserved_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

